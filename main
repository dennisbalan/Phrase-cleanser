#!/bin/bash
while read a
do
	temp=$a
f=$temp
c=`echo $f | tr 'a-z' 'A-Z'`
d=`echo $c | tr "()[]{}'" '@'`
d=`echo $d | tr '""' '@'`
echo $d > phrases.txt
d=`sed '1, $s/@//g' phrases.txt`
d=`echo $d | tr ' ' '_'`
d=`echo $d | tr '. , ! : ; ?' ' '`
echo $d > phrases.txt
echo $d
d=`sed '1,$s/ _/ /g' phrases.txt`
echo $d
echo $d > phrases.txt
d=`sed '1,$s/_$/ /g' phrases.txt`
echo $d > phrases.txt
echo $d
d=`sed '1,$s/_ / /g' phrases.txt`
echo $d > phrases.txt
echo $d
declare -A hash
for phrase in $d
	do
	count=${hash["$phrase"]}
	if [[ "$count" == "" ]]
	then    
		count=1
		hash["$phrase"]=$count
	else
	count=$((count+1))
	hash["$phrase"]=$count
	fi
done
done
for key in ${!hash[@]}
	do
		
		echo "${hash["$key"]} $key"
done

